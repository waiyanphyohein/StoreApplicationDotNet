@model IEnumerable<Project1.App.Models.LocationViewModel>;

@{
    ViewData["Title"] = "Location";
}

<h1> Location </h1>
@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<p> Choose Location To Proceed to Ordering Products </p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.X)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Y)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.X)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Y)
                </td>
                <td>
                    @using (Html.BeginForm("Detail", "Location"))
                    {
                        <input type="submit" class="btn btn-primary" value="Detail" />
                        <input type="hidden" asp-route-id ="@item.LocationID" name="LocationID" value="@item.LocationID" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
